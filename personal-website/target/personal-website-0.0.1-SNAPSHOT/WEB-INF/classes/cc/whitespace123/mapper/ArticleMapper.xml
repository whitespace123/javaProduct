<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.mybatis.mapper.UserMapper">
	<!-- 与数据库字段映射 -->
	<resultMap id="BaseResultMap" type="cc.whitespace123.enity.Article">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="title" property="title" jdbcType="VARCHAR" />
		<result column="content" property="content" jdbcType="VARCHAR" />
		<result column="jointime" property="jointime" jdbcType="DATE" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="summary" property="summary" jdbcType="VARCHAR" />
		<association property="user" javaType="cc.whitespace123.enity.User">
			<!-- column:user表的主键对应的列 property：user对象中id属性 -->
			<id column="user_id" property="userId" />
		</association>
	</resultMap>
	<!-- sql片段 -->
	<sql id="article_table_field">
		id,title,content,jointime,type,summary
	</sql>
	<!-- 插入文章 -->
	<insert id="insertActicle" parameterType="cc.whitespace123.enity.Article">
		INSERT INTO article(
		<if test="id!=null">
			id,
		</if>
		title,content,
		<if test="jointime!=null and jointime!=''">
			jointime,
		</if>
		type,
		<if test="summary!=null and summary!=''">
			summary,
		</if>
		userId
		)
		VALUES(
		<if test="id!=null">
			#{id},
		</if>
		#{title},#{content},
		<if test="jointime!=null and jointime!=''">
			#{jointime},
		</if>
		#{type},
		<if test="summary!=null and summary!=''">
			#{summary},
		</if>
		#{userId.id})
	</insert>
	<!-- 删除文章 -->
	<delete id="deleteArticle" parameterType="cc.whitespace123.enity.Article">
		DELETE FROM article
		WHERE id = #{id}
	</delete>
	<!-- 修改文章 -->
	<update id="updateArticle" parameterType="cc.whitespace123.enity.Article">
		UPDATE article SET
		title = #{title},content =
		#{content},summary = #{summary} WHERE id =
		#{id}
	</update>
	<!-- 查询文章 -->
	<select id="selectArticle" parameterType="cc.whitespace123.enity.Article"
		resultMap="BaseResultMap">
		SELECT
		<include refid="article_table_field" />
		FROM article WHERE id = #{id} AND userId = #{userId.id}
	</select>
	<!-- 根据关键字查询文章 -->
	<select id="selectArticles" parameterType="cc.whitespace123.enity.Article"
		resultMap="BaseResultMap">
		SELECT
		<include refid="article_table_field" />
		FROM article
		<where>
			userId = #{userId.id} AND type = #{type}
			<if test="title!=null and title!=''">
				AND title LIKE CONCAT('%',#{title},'%')
			</if>
			<if test="content!=null and content!=''">
				AND content LIKE CONCAT('%',#{content},'%')
			</if>
			<if test="jointime!=null and jointime!='' ">
				AND jointime = #{jointime}
			</if>
			<if test="summary!=null and summary!=''">
				AND summary LIKE CONCAT('%',#{summary},'%')
			</if>
		</where>
	</select>
</mapper>